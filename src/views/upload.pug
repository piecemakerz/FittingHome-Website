extends layouts/main

block content
    .form-container
        form(action=`${routes.posts}${routes.upload}`, method="post", enctype="multipart/form-data")
            .fileUpload
                label(for="file") Model File
                input(type="file", id="file", name="modelFile", required=true, accept=".zip,.rar,.7zip")
            input(type="text", placeholder="Title", name="title", required=true)
            textarea(name="description", placeholder="Description", required=true)
            input(type="submit", value="Upload Model")